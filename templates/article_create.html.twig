{% extends 'base.html.twig' %}

{% block metatitle %}
    Création d'un article | Le blog de la piscine
{% endblock %}

{% block main %}
    <section class="container my-5" >
        <h1 class="mb-4 text-center" style="font-style: italic">Créer un nouvel article</h1>
        <div class="row justify-content-center">
            <div class="col-md-8" >
                <div class="card shadow-sm p-4" style="background-color: rgba(224,218,198,0.47)">
                    {{ form_start(formView, {'attr': {'class': 'needs-validation'}}) }}

                    {{ form_widget(formView, {'attr': {'class': 'form-control' }}) }}

                    {{ form_end(formView) }}
                </div>
            </div>
        </div>
    </section>
{% endblock %}